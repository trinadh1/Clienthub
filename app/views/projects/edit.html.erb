<h1>Projects#edit</h1>
<h1>Edit Project: <%= @project.name %></h1>

<%= form_with model: [@client, @project], local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Update Project" %>
  </div>
<% end %>

<%= link_to "Back to Projects", client_projects_path(@client) %>